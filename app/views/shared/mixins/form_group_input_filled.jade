mixin formGroupInputFilled(id, name, value, required)
    .form-group
        label(for=id class="col-lg-2 control-label")= placeholder
        .col-lg-10
            if required
                input(id=id class="form-control" type="text" name=name value=value required="required")
            else
                input(id=id class="form-control" type="text" name=name value=value)
