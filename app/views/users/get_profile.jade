extends ../shared/layout

block main-content
    include ../shared/mixins/form_group_input.jade
    
    .row  
        .col-md-6
            .panel.panel-primary
                .panel-heading
                    .panel-title Profile information
                .row.panel-body
                    .col-md-4
                        if (user.avatar)
                            img.img-rounded(src='#{user.avatar}', width = 150, height= 150, alt='#{user.username}')
                        else
                            img.img-rounded(src='/img/users/default.png', width = 150, height= 150, alt='#{user.username}')    
                    .col-md-8
                        dl.dl-horizontal
                            dt Username
                            dd #{user.username}
                            dt First name
                            dd #{user.firstName}
                            dt Last name
                            dd #{user.lastName}                        
                            dt
                                span.glyphicon.glyphicon-earphone
                            dd #{user.phoneNumber}
                            dt Points
                            dd  #{user.eventPoints}
                            if (user.facebook)
                                dt Facebook
                                dd #{user.facebook}
                            if (user.twitter)
                                dt Twitter
                                dd #{user.twitter}
                            if (user.linkedin)
                                dt LinkedIn
                                dd #{user.linkedin}
                            if (user.googleplus)
                                dt Google+
                                dd #{user.googleplus}                            
        form.col-md-6(method="post", enctype="multipart/form-data" class="form-horizontal well")
            fieldset                
                +formGroupInput('phoneNumber', 'phoneNumber', 'Phone number', false)        
                +formGroupInput('facebook', 'facebook', 'Facebook', false)                 
                +formGroupInput('twitter', 'twitter', 'Twitter', false)                 
                +formGroupInput('linkedin', 'linkedin', 'Linkedin', false)                 
                +formGroupInput('googleplus', 'googleplus', 'Googleplus', false)  
                .form-group            
                    label(for='avatar' class="col-lg-2 control-label") Photo
                    .col-log-10
                        input(type="file" name="avatar")                
                .col-lg-10.col-lg-offset-2                    
                    input(type="submit" class="btn btn-primary" value="Change")
        
    table.table.table-bordered
        caption Created events by me
        tr
            th Title
            th Description        
            th Evaluation   
        each event in myEvents
            tr
                td 
                    a(href="/events/details/#{event._id}") #{event.title}
                td #{event.description}                   
                td #{event.evaluation}    
